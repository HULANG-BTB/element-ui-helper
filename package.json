{
  "name": "element-ui-helper",
  "displayName": "element-ui-helper",
  "version": "1.4.0",
  "description": "Document Hover Tips And Autocomplete Tools.",
  "author": {
    "name": "AloneH",
    "email": "admin@oibit.cn",
    "url": "https://oibit.cn"
  },
  "publisher": "oibit",
  "license": "MIT",
  "icon": "element.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/HULANG-BTB/element-ui-helper.git"
  },
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:vue"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Element UI Helper Config",
      "properties": {
        "element-ui-helper.language": {
          "type": "string",
          "default": "zh-CN",
          "description": "Document Language of Element UI",
          "enum": [
            "zh-CN",
            "en-US"
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run build",
    "watch": "yarn rollup --config ./rollup.config.js -w",
    "pretest": "yarn lint",
    "lint": "eslint src",
    "test": "node ./out/test/runTest.js",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "commit": "git-cz",
    "docs": "node ./src/document/document-builder.js",
    "package": "vsce package",
    "build": "yarn rollup --config ./rollup.config.js"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "1.50.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "commitizen": "^4.2.3",
    "conventional-changelog": "^3.1.24",
    "conventional-changelog-cli": "^2.1.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "lint-staged": "^11.1.1",
    "mocha": "^8.2.1",
    "prettier": "^2.2.1",
    "rollup": "^2.56.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "typescript": "^4.1.3",
    "vsce": "^1.96.1",
    "vscode-test": "^1.5.0",
    "yorkie": "^2.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "eslint"
    ]
  }
}
